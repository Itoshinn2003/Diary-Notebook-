<div class="notebook">
    <%= form_for(@user, url: { controller: 'users', action: 'create' }) do |form| %>
        <div class="form-group form-input">
          <%= form.text_field :name, id: 'user_name', placeholder: '名前', required: true %>
        </div>
        <div class="form-group form-input">
          <%= form.password_field :password, id: 'user_password', placeholder: 'パスワード', required: true %>
        </div>
        <div class="form-group ">
          <%= form.submit '日記を開く', class: 'btn user_submit' %>
        </div>
    <% end %>
    <h1>Diary NoteBook</h1>
</div>